function next_tile(x,y)
	  sprite=mget(x,y)
	  mset(x,y,sprite+1)
end
function pick_coin(x,y)
		next_tile(x,y)
		coin+=1
end

function pick_bill(x,y)
		next_tile(x,y)
		coin+=5
end
