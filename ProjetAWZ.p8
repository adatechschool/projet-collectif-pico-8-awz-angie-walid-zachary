function check(obj,dir,flag)
-- on veut verifier la direction,la localisation, et le flag 
	local y=obj.y   local x=obj.x
	local h=obj.h   local w=obj.w
	print("test")
	
	if dir=="left" then
   block=mget(x-8,y)
   return fget(block,flag)
 
 elseif dir=="down" then
   block=mget(x/8,(y+8)/8)
   return fget(block,flag)
 end
 
	
end
