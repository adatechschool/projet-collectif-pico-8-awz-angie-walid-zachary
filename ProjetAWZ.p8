function movment()
  player.dy=0
		player.dx=0
		if (btn(➡️)) then
	 player.dx+=1
end
		if (btn(⬆️)) then
	 player.dy-=1     
end
		if (btn(⬅️)) then
	 player.dx-=1
end
		if (btn(⬇️)) then
	 player.dy+=1
end


if (check(player,"down",0)) then
		player.dy=0
end


	player.x+= player.dx
	player.y+= player.dy	
end


